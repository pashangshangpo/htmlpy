{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "src",
    "outDir": "./dist/",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
    },
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "checkJs": true
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*",
    "typings.d.ts"
  ]
}
